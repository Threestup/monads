{
  "collectCoverageFrom": [
    "**/*.{ts,tsx}",
    "!src/main.ts",
    "!src/types.ts",
    "!**/node_modules/**",
    "!**/dist/**",
    "!**/examples/**",
    "!**/fixture/**"
  ],
  "testPathIgnorePatterns": [
    "<rootDir>/node_modules/",
    "<rootDir>/dist/"
  ],
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "json"
  ]
}
